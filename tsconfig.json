{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "react-jsx",
        "moduleResolution": "Bundler",
        "baseUrl": "src",
        "paths": {
            "@/*": ["./src/*"],
            "@/services/*": ["services/*"],
            "@/components/*": ["components/*"],
            "@/hooks/*": ["hooks/*"],
            "@/utils/*": ["utils/*"]
        },
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}
