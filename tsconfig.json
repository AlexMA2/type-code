{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "react-jsx",
        "moduleResolution": "Bundler",
        "baseUrl": "src",
        "paths": {
            "@/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@services/*": ["src/services/*"],
            "@utils/*": ["src/utils/*"],
            "@hooks/*": ["src/hooks/*"]
        },
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}
