{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "react-jsx",
        "moduleResolution": "Node",
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"],
            "@services/*": ["services/*"],
            "@components/*": ["components/*"],
            "@hooks/*": ["hooks/*"],
            "@utils/*": ["utils/*"]
        },
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}
